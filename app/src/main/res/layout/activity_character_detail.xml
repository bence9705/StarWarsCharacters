<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.characterdetail.CharacterDetailActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="92dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Name"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameFromData"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="44dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/characterHeight"
        android:layout_width="92dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"

        android:text="Height"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameFromData" />

    <TextView
        android:id="@+id/heightFromData"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="48dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/characterHeight"
        app:layout_constraintTop_toTopOf="@id/nameFromData" />

    <TextView
        android:id="@+id/mass"
        android:layout_width="92dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Mass"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/characterHeight" />

    <TextView
        android:id="@+id/massFromData"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="48dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/mass"
        app:layout_constraintTop_toTopOf="@id/heightFromData" />

    <TextView
        android:id="@+id/hair_color"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Hair Color"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mass" />

    <TextView
        android:id="@+id/hairColorFromData"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="44dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/mass"
        app:layout_constraintTop_toTopOf="@id/massFromData" />

    <TextView
        android:id="@+id/skin_color"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Skin Color"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/hair_color" />

    <TextView
        android:id="@+id/skinColorFromData"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="44dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/hair_color"
        app:layout_constraintTop_toTopOf="@id/hairColorFromData" />

    <TextView
        android:id="@+id/eye_color"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Eye Color"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/skin_color" />

    <TextView
        android:id="@+id/eyeColorFromData"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="44dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/eye_color"
        app:layout_constraintTop_toTopOf="@id/skinColorFromData" />

    <TextView
        android:id="@+id/birth_year"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Birth Year"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/eye_color" />

    <TextView
        android:id="@+id/birthYearFromData"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="44dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/birth_year"
        app:layout_constraintTop_toTopOf="@id/eyeColorFromData" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Gender"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/birth_year" />

    <TextView
        android:id="@+id/genderFromData"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="44dp"

        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/gender"
        app:layout_constraintTop_toTopOf="@id/birthYearFromData" />

    <TextView
        android:id="@+id/homeworld"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"

        android:text="Homeworld"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gender" />

    <TextView
        android:id="@+id/homeworldFromData"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"

        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/genderFromData" />

</androidx.constraintlayout.widget.ConstraintLayout>