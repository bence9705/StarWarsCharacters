<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/characterHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="height"
        app:layout_constraintTop_toBottomOf="@id/name"/>
    <EditText
        android:id="@+id/mass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mass"
        app:layout_constraintTop_toBottomOf="@id/characterHeight"/>
    <EditText
        android:id="@+id/hair_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="hair_color"
        app:layout_constraintTop_toBottomOf="@id/mass"/>
    <EditText
        android:id="@+id/skin_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="skin_color"
        app:layout_constraintTop_toBottomOf="@id/hair_color"/>

    <EditText
        android:id="@+id/eye_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="eye_color"
        app:layout_constraintTop_toBottomOf="@id/skin_color"/>

    <EditText
        android:id="@+id/birth_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="birth_year"
        app:layout_constraintTop_toBottomOf="@id/eye_color"/>
    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="gender"
        app:layout_constraintTop_toBottomOf="@id/birth_year"/>

    <EditText
        android:id="@+id/homeworld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="homeworld"
        app:layout_constraintTop_toBottomOf="@id/gender" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="76dp"
        android:hint="save"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homeworld" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="56dp"
        android:hint="cancel"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homeworld" />
</androidx.constraintlayout.widget.ConstraintLayout>